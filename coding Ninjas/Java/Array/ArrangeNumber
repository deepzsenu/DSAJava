
public class Solution {
    
    public static void arrange(int[] arr, int n) {
    	//Your code goes here
        int j = 0;
        for(int  i = 0; i<arr.length; i++){
            if(i%2==0){
                arr[j] = i+1;
                j++;
            }
        }
        for (int i = arr.length; i>0; i--) {
            if (i % 2 == 0) {
                arr[j] = i ;
                j++;
            }
        }
    }
}