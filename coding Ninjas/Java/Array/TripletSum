
public class Solution {
    
    public static int findTriplet(int[] arr, int x) {
    	//Your code goes here
        int s = 0;
        for (int i = 0; i < arr.length; i++) {
            for (int j = i+1; j < arr.length; j++) {
                for (int j2 = j+1; j2 < arr.length; j2++) {
                    if(arr[i]+arr[j]+arr[j2]==x){
                        s++;
                    }
                    
                }
            }
        }

        return s;
    }

}